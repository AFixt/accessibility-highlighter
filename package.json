{
  "name": "@afixt/a11y-highlighter",
  "version": "1.0.2",
  "description": "The Accessibility Highlighter finds accessibility problems on a website and highlights them on the page to give a visual indication of what the problems are. It also logs errors to console and annotates the DOM.",
  "main": "src/background.js",
  "scripts": {
    "clean": "rm -rf dist coverage a11y-highlighter.zip",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:coverage": "jest --coverage --maxWorkers=50%",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm-run-all --parallel lint:check test test:e2e",
    "lint": "eslint src/ tests/ *.js",
    "lint:fix": "eslint src/ tests/ *.js --fix",
    "lint:check": "eslint src/ tests/ *.js --max-warnings 0",
    "prebuild": "npm run clean",
    "build": "mkdir -p dist && cp -r src/* manifest.json dist/",
    "package": "npm run build && cd dist && zip -r ../a11y-highlighter.zip *",
    "dev": "npm run build && npm run test:watch",
    "prepare": "husky",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:first": "standard-version --first-release",
    "release:dry-run": "standard-version --dry-run"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "chrome-extension"
  ],
  "author": "AFixt <talktous@afixt.com>",
  "homepage": "https://github.com/AFixt/a11y-highlighter",
  "repository": {
    "type": "git",
    "url": "https://github.com/AFixt/a11y-highlighter"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-loader": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.5.0"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
